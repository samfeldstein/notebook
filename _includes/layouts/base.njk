<!DOCTYPE html>
<html lang="en">
  {% include "partials/head.njk" %}
  <body>
    <a class="skiplink" href="#main-content">Skiplink</a>

    <header class="site">
      <a class="site-title" href="/">{{ config.site.title }}</a>
      <div>
        <nav>
          {{
            collections.all
              | eleventyNavigation
              | eleventyNavigationToHtml
              | safe
          }}
        </nav>
        <a href="https://samfeldstein.xyz/" target="_blank">Main Site</a>
      </div>
    </header>

    <main id="main-content">
      <header class="page">
        <h1>{{ title }}</h1>
        {% if tags %}
        <ul class="tags note">
          {%- for tag in tags | filterTagList %} {%- set tagUrl %}/tags/{{
            tag | slugify
          }}/{% endset %}
          <li>
            <a href="{{ tagUrl }}" class="tag">#{{ tag }}</a
            >{%- if not loop.last %}, {% endif %}
          </li>
          {%- endfor %}
        </ul>
        {% endif %}
      </header>

      {{ content | safe }}
    </main>

    {% include "partials/footer.njk" %}
  </body>
</html>
