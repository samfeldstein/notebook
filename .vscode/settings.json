{
  // Hide some files from explorer
  "files.exclude": {
    "**/.git/objects/**": true,
    "**/.git/subtree-cache/**": true,
    "node_modules": true,
    "**/.hg/store/**": true,
    "content/.vscode": true,
    "content/.foam": true
  },

  // Treat .webc and .njk files at html
  "files.associations": {
    "*.webc": "html",
    "*njk": "html"
  },

  // Foam settings
  "foam.edit.linkReferenceDefinitions": "withoutExtensions"
}
