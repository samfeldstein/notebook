{
  // Hide some files from explorer
  "files.exclude": {
    "**/.git/objects/**": true,
    "**/.git/subtree-cache/**": true,
    "node_modules": true,
    "**/.hg/store/**": true,
    "content/.foam": true,
    "content/.vscode": true
  },

  "files.watcherExclude": {
    "**/.git/objects/**": true,
    "**/.git/subtree-cache/**": true,
    "**/node_modules/*/**": true,
    "**/.hg/store/**": true,
    "content/.foam": true,
    "content/.vscode": true,
    "_site": true
  },

  // Treat .webc and .njk files at html
  "files.associations": {
    "*.webc": "html",
    "*njk": "html"
  }
}
